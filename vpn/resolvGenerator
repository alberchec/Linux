#! /bin/bash

rm -f /etc/resolv.conf

echo "#File generated by Alberto's vpn manipulation scripts" >> /etc/resolv.conf

for var in $(cat /run/resolvconf/resolv.conf | grep 'nameserver ')
do
	if [ $var != "nameserver" ] && [ $var != "192.168.15.1" ] && [ $var != '10.0.1.1' ] && [ $var != '1.1.1.1' ] \
        && [ $var != '127.0.0.53' ]
	then
		echo nameserver $var >> /etc/resolv.conf
	fi
done
